extends  ../_includes/_skeleton

block variables
  - var pageName = 'Under construction'
  - var pageClass = ['section-single', 'bg-light']
  - var bodyClass = 'flex'

block title
  title= pageName

block page

  // Page Header
  include ../_includes/_header-small

  // Page Content

  // Our Website Is Under Construction
  section.text-center
    .container
      .row.justify-content-md-center
        .col-lg-10.col-xl-8
          h3 Our Website Is Under Construction
          .offset-top-35.offset-sm-top-60
            .max-width-560
              .progress-variant-1
                .progress
                  .progress-bar(role='progressbar', aria-valuenow='50', aria-valuemin='0', aria-valuemax='100', style='width: 50%;')
                span.caption 50%
          .offset-top-40.offset-md-top-75
            .group-xl
              a.btn.btn-primary.btn-mod-1(href='index.html') Back to home page
              a.btn.btn-600.btn-mod-2(href='contacts.html') contact us

  ='\n'
  // Page Footer
  include ../_includes/_footer-small
