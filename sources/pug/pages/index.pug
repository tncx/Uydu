            .item
              a.link-image.link-image-contrast(href='#')
                +img('clients-inverse-2-200x90.png')
            .item
              a.link-image.link-image-contrast(href='#')
                +img('clients-inverse-3-200x90.png')
            .item
              a.link-image.link-image-contrast(href='#')
                +img('clients-inverse-4-200x90.png')
            .item
              a.link-image.link-image-contrast(href='#')
                +img('clients-inverse-5-200x90.png')
            .item
              a.link-image.link-image-contrast(href='#')
                +img('clients-inverse-6-200x90.png')
  ='\n'

  // Happy Customer Testimonials
  section.section-60.section-sm-top-110.section-sm-bottom-100
