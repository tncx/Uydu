extends  ../_includes/_skeleton

block variables
  - var pageName = 'Home'

block title
  title= pageName

block page
  // Page Header
  include ../_includes/_header

  // Page Content

  include ../_includes/_slider

  // Counters
  section.section-80.section-md-110
    .container
      include ../_includes/_counters

  // Our Services
  section
    .section-60.section-sm-110.bg-light
      .bg-light-element
      .container.text-center
        .row
          .col-sm-12
            h2 Our Services
            p.big.text-dark Take a look at the range of services that our renovation experts offer.

    .section-60.section-sm-110
      .container.container-wide.container-1.container-mod-1
        .row
          // Slick Carousel
          .slick-slider.slick-slider-style-1(data-arrows="true",
          data-loop="true", data-dots="false", data-swipe="true",
          data-items="1", data-xs-items="2", data-md-items="3",
          data-lg-items="3", data-xl-items="4", data-xxl-items="6",
          data-slide-to-scroll="1", data-mobile-center-mode='true',
          data-sm-center-mode='false',
          data-center-padding='30px',
          data-sm-center-padding='0.5')
            .item.height-fill
              .product
                a(href=href=tabsMenu[0].link).product-image
                  +img('icon-01-101x100.png')
                .product-caption
                  .divider.divider-sm.divider-primary
                  .product-title: h5: a(href=tabsMenu[0].link)=tabsMenu[0].title
            .item.height-fill
              .product
                a(href=href=tabsMenu[1].link).product-image
